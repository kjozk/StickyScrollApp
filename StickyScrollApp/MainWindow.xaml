<Window x:Class="StickyScrollApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:StickyScrollApp"
        xmlns:controls="clr-namespace:StickyScrollApp.Controls"
        mc:Ignorable="d"
        Title="StickyScrollApp" Height="350" Width="525">
    <Grid>
        <controls:StickyTreeView x:Name="stickyTreeView" 
                                ItemsSource="{Binding RootItems}" 
                                Margin="10" 
                                BorderThickness="1"
                                ItemTemplateSelector="{x:Null}"/>
    </Grid>
</Window>
